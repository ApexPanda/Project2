{{> navBar}}

{{#if users.0.service_provider}}
<h1 class="profile-heading white-text center">Pet {{users.0.role}}s</h1>
{{/if}}
{{#if users.0.pet_owner}}
<h1 class="profile-heading white-text center">Pet Owners</h1>
{{/if}}
<div class="container">

    {{#each users}}

    <div class="col s12 m9">
        <h2 class="header white-text">{{first_name}} {{last_name}}</h2>
        <div class="card horizontal">
            <div class="card-image">
                <img class="result-profile-image"
                    src="{{#if image}}{{image}}{{else}}./images/site/default-profile-2.jpg{{/if}}">
            </div>
            <div class="card-stacked">
                <div class="card-content">
                    <p>Pet {{role}}</p>
                    <p>{{location}}</p>
                    <p>Average Rating: ****</p>
                </div>
                <div class="card-action">
                    <a href="./userProfile?id={{id}}">More Info</a>
                </div>
            </div>
        </div>
    </div>

    {{else}}
    <h2 class="profile-heading white-text center">No Results match your criteria</h2>
    {{/each}}
</div>


<script src="./js/results.js"></script>