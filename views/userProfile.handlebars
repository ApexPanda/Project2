{{> navBar}}

<div class="container grey lighten-4">

  <div>
    <img src="./images/site/index.jpeg" alt="top image" id="profile-header">
  </div>
  <div class="content-padding">

    {{#each users}}

    {{!-- profile image and stats --}}
    <div class="row">
      <div class="col s4">
        <div class="card">
          <div class="card-image">
            <img src="./images/site/results.jpeg">
          </div>
          <div class="card-content">
            <span class="card-title">{{first_name}} {{last_name}}</span>
            <p>Pet {{role}}</p>
            <p>{{location}}</p>
            <p>Rating: <span>4.5/5</span></p>
          </div>
          <div class="card-action">
            <a href="#">This is a link</a>
          </div>
        </div>
      </div>
      <div class="col s8 white">
        <h4>About Me</h4>
        <p>{{about_me}}</p>
      </div>
    </div>
    {{/each}}

    {{!-- Profile pets --}}
    <h4 class="center-align">My Pets</h4>

    {{#each pets}}
    <div class="row">
      <div class="col s12">

        <div class="card horizontal">
          <div class="card-image">
            <img src="https://lorempixel.com/100/190/nature/6">
          </div>
          <div class="card-stacked">
            <div class="card-content">
              <span class="card-title">{{pet_name}}</span>

              <p>{{pet_type}}</p>
              <p>{{location}}</p>
              <p>{{about_me}}</p>
            </div>
            <div class="card-action">
              <a href="#">This is a link</a>
            </div>
          </div>
        </div>

      </div>
    </div>
    {{else}}
    <p>No pets currently</p>
    {{/each}}

    {{!-- Profile Reviews --}}
    <h4 class="center-align">Reviews</h4>
    {{#each reviews}}
    <div class="row">
      <div class="col s12">
        <div class="col s12">

          <div class="card horizontal">
            <div class="card-stacked">
              <div class="card-content">
                <span class="card-title">{{title}}</span>

                <p>Rating: {{rating}} / 10</p>

                <br>
                <p>{{review}}</p>
              </div>
              <div class="card-action">
                <a href="#">This is a link</a>
              </div>
            </div>
          </div>

        </div>


      </div>
    </div>
    {{/each}}

  </div>
</div>


<script src="./js/userProfile.js"></script>