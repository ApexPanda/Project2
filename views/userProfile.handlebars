{{> navBar}}

<div class="container grey lighten-4">

  <div id="profile-header"></div>

  <div class="content-padding">

    {{#each users}}

    {{!-- profile image and stats --}}
    <div id="profile-div" class="row" data-user-id={{id}}>
      <div class="col s12 m4">
        <div class="card butlr-blue">
          <div class="card-image profile-image"
            style="background-image: url('{{#if image}}{{image}}{{else}}{{#if pet_owner}}./images/site/default-profile-2.jpg{{else}}./images/site/default-profile-3.jpg{{/if}}{{/if}}')">
          </div>
          <div class=" card-content white-text">
            <span class="card-title butlr-green-text font3">{{first_name}} {{last_name}}</span>
            <p>Pet {{role}}</p>
            <p>{{location}}</p>
            <p>Rating: <span>4.5/5</span></p>
          </div>
        </div>
      </div>

      <div class="col s12 m8">
        <div class="card butlr-blue white-text">
          <div class=" card-content">
            <span class="card-title butlr-green-text font3">About Me</span>
            {{#if about_me}}
            <p>{{about_me}}</p>
            {{else}}
            <br>
            <p class="center-align font2">No info currently</p>
            <br>
            {{/if}}
          </div>
        </div>
      </div>

    </div>
    {{/each}}

    <div class="">
      {{!-- Profile pets --}}
      <h4 class="center-align font1">My Pets</h4>

      {{#each pets}}
      <div class="row">
        <div class="col s12">

          <div class="card horizontal butlr-blue white-text">
            <div class="card-image pet-image"
              style="background-image: url('{{#if image}}{{image}}{{else}}./images/site/default-profile-1.jpg{{/if}}')">
            </div>
            <div class="card-stacked">
              <div class="card-content">
                <span class="card-title butlr-green-text font3">{{pet_name}}</span>

                <p>{{pet_type}}</p>
                <p>{{location}}</p>
                <br>
                <p>{{about_me}}</p>
              </div>

            </div>
          </div>

        </div>
      </div>
      {{else}}
      <br>
      <p class="center-align font2">No pets currently</p>
      <br>
      {{/each}}

      {{!-- Profile Posts --}}
      <h4 class="center-align font1">Updates</h4>
      {{#each posts}}
      <div class="row">
        <div class="col s12">

          <div class="card horizontal">
            <div class="card-stacked">
              <div class="card-content">
                <span class="card-title butlr-green-text font2">{{title}}</span>
                <br>
                <p>{{post}}</p>
              </div>
              <div class="card-action">
                <a href="./userProfile?id={{author_id}}" class="font2 butlr-pink-text">View Author</a>
              </div>
            </div>
          </div>

        </div>
      </div>
      {{else}}
      <br>
      <p class="center-align font2">No posts currently</p>
      <br>
      {{/each}}
      <div class="row right-align">
        <span class="margin-right-5 butlr-pink-text font3">New Update</span>
        <a class="btn-floating waves-effect waves-light butlr-pink"><i class="material-icons">add</i>
        </a>
      </div>


      {{!-- Profile Reviews --}}
      <h4 class="center-align font1">Reviews</h4>
      {{#each reviews}}
      <div class="row">
        <div class="col s12">

          <div class="card horizontal">
            <div class="card-stacked">
              <div class="card-content">
                <span class="card-title butlr-green-text font2">{{title}}</span>

                <p>Rating: {{rating}} / 10</p>

                <br>
                <p>{{review}}</p>
              </div>
              <div class="card-action">
                <a href="./userProfile?id={{author_id}}" class="butlr-pink-text font2">View Author</a>
              </div>
            </div>
          </div>

        </div>
      </div>
      {{else}}
      <br>
      <p class="center-align font2">No reviews currently</p>
      <br>
      {{/each}}
      <div class="row right-align">
        <span class="margin-right-5 butlr-pink-text font3">Add Review</span>
        <a class="btn-floating waves-effect waves-light butlr-pink"><i class="material-icons">add</i>
        </a>
      </div>
    </div>
  </div>
</div>


<script src="./js/userProfile.js"></script>