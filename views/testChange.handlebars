{{> navBar}}

<div class="container grey lighten-4">

    <div id="profile-header" style="background-image: url('./images/site/index.jpeg')">
    </div>

    <div class="content-padding">

        {{#each users}}

        {{!-- profile image and stats --}}
        <div class="row">
            <div class="col s12 m4">
                <div class="card butlr-blue">
                    <div class="card-image profile-image"
                        style="background-image: url('{{#if image}}{{image}}{{else}}{{#if pet_owner}}./images/site/default-profile-2.jpg{{else}}./images/site/default-profile-3.jpg{{/if}}{{/if}}')">
                    </div>

                    <div class=" card-content white-text">
                        <p>Image URL: {{image}}</p>
                        <span class="card-title butlr-green-text">{{first_name}} {{last_name}}</span>
                        <p>Pet {{role}}</p>
                        <p>{{location}}</p>
                        <p>Rating: <span>4.5/5</span></p>
                    </div>
                </div>
            </div>

            <div class="col s12 m8">
                <div class="card butlr-blue white-text">
                    <div class=" card-content">
                        <span class="card-title butlr-green-text">About Me</span>
                        <p>{{about_me}}</p>
                    </div>
                </div>
            </div>

        </div>
        {{/each}}

        <div class="">
            {{!-- Profile pets --}}
            <h4 class="center-align">My Pets</h4>

            {{#each pets}}
            <div class="row">
                <div class="col s12">

                    <div class="card horizontal butlr-blue white-text">
                        <div class="card-image pet-image"
                            style="background-image: url('{{#if image}}{{image}}{{else}}./images/site/default-profile-1.jpg{{/if}}')">
                        </div>

                        <div class="card-stacked">
                            <div class="card-content">
                                <span class="card-title butlr-green-text">{{pet_name}}</span>

                                <p>{{pet_type}}</p>
                                <p>{{location}}</p>
                                <br>
                                <p>{{about_me}}</p>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
            {{else}}
            <br>
            <p class="center-align">No pets currently</p>
            <br>
            {{/each}}

            {{!-- Profile Reviews --}}
            <h4 class="center-align">Reviews</h4>
            {{#each reviews}}
            <div class="row">
                <div class="col s12">

                    <div class="card horizontal">
                        <div class="card-stacked">
                            <div class="card-content">
                                <span class="card-title butlr-green-text">{{title}}</span>

                                <p>Rating: {{rating}} / 10</p>

                                <br>
                                <p>{{review}}</p>
                            </div>
                            <div class="card-action">
                                <a href="./userProfile?id={{author_id}}">View Author</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            {{else}}
            <br>
            <p class="center-align">No reviews currently</p>
            <br>
            {{/each}}
        </div>
    </div>
</div>


<script src="./js/testChange.js"></script>